@model MethodsSelectorsAndAttributes.Models.Article

@{
    ViewBag.Title = "Index";
}

<h2>Add Article</h2>

@using (Html.BeginForm("UploadArticle", "Admin"))
{
    <div class="form-group">
        @Html.DisplayNameFor(model => model.Header)
        <div>
            @Html.EditorFor(model => model.Header)
        </div>
    </div>

    <div class="form-group">
        @Html.DisplayNameFor(model => model.Text)
        <div>
            @Html.TextAreaFor(model => model.Text)
        </div>
    </div>

    <div class="form-group">
        @Html.DisplayNameFor(model => model.ImageSource)
        <div>
            @Html.EditorFor(model => model.ImageSource)
        </div>
    </div>

    <div class="form-group">
        <input type="submit" value="Upload"/>
    </div>
}

