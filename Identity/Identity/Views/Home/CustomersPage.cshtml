@model ICollection<Order>
@{
    ViewData["Title"] = "CustomersPage";
}

@if (Model.Count > 0)
{
    <h1>Waiting for applying...</h1>
}

<div class="orders">
    @foreach (var order in Model)
    {
        <div class="col-3 order">
            <p>
                <b>Waiting for: </b> @order.InquiryName
            </p>
            <p>
                <b>Doctor: </b> @order.Doctor.UserName
            </p>
        </div>
    }
</div>
<hr />
<form asp-action="MakeOrder" method="post">
    <fieldset>
        <legend>Make request</legend>
        <input name="doctorName" type="text" placeholder="Doctor name" />
        <br />
        <input name="inquiryName" type="text" placeholder="Inquiry name" />
        <br />
        <input type="submit" />
    </fieldset>
</form>

