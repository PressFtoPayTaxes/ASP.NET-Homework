@model ICollection<Order>
@{
    ViewData["Title"] = "DoctorsPage";
}

<h1>Orders for applying</h1>

<div class="orders">
    @if (Model.Count == 0)
    {
        <h3>There's no orders by now</h3>
    }
    else
    {
        @foreach (var order in Model)
        {
            <div class="col-3 order">
                <p>
                    <b>Requested inquiry: </b> @order.InquiryName
                </p>
                <p>
                    <b>Customer's name: </b> @order.Customer.UserName
                </p>
                <form asp-action="ApplyOrder" method="post">
                    <input type="hidden" value=@order.Id name="orderId">
                    <input type="submit" value="Apply" />
                </form>
            </div>
        }
    }
</div>

